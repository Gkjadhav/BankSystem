extends base.pug

block style 
    style 
        include ../static/style_base.css
        include ../static/style_add.css

block content 
    <div class="container">
        <div class="card text-center" style="width: 33rem;">
            <div class="card-body">
                <h5 class="card-title">Add Member</h5>
                <form action="/add" method="post" id="contact">
                <input type="text" class="myInput" name="name" id="name" placeholder="Enter your name">
                <input type="text" class="myInput" name="email" id="email" placeholder="Enter your email">
                <input type="number" class="myInput" name="accountNo" id="accountNo" placeholder="Enter your A/c">
                <input type="number" class="myInput" name="balance" id="balance" placeholder="Enter your balance">
                <button class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>
    </div>
    

        